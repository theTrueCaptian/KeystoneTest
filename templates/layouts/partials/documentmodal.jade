		div(class="modal-content")
			div( class="modal-header")
				button( type="button" class="close" data-dismiss="modal" aria-hidden="true") 
				h4( class="modal-title" id="docUploaderLabel") Document Uploader
			div( class="modal-body")
				div( class="row ")
					div( class="col-md-6")
						div( class="panel panel-default")
							div( class="panel-heading")
								h4( class="panel-title") Existing Documents
							div(  class="panel-body")
								p Documents:
								//<%-  documentlist %>
								//!=partial('partials/documentlist')
									
								//<!-- Button that goes to file chooser for uploading into server-->
								button( id="upload_btn" class="btn btn-primary") Upload Documents
					div(  class="col-md-6")
						div(  class="panel panel-default")
							div(  class="panel-heading")
								h4( class="panel-title") Documents to Analyze
							div(  class="panel-body")
								p Documents:
